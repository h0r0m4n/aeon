include _vars.jade

doctype html
html
  head
    meta(charset="utf-8")
    title VR by Horoman
    meta(name="description", content="VR by Horoman")
    meta(name="robots", content="index, follow")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="theme-color" content="#{sky2}")
    link(rel="shortcut icon", href="img/favicon.ico", type="image/ico")
    script(src="js/all.js")
  body
    a-scene
      a-sphere(position="0 1.5 -1", radius="1.25", color="#{tree4}")
      a-cube(position="-1.25 0.5 1", rotation="0 45 0", width="1", height="1", depth="1", color="#{tree3}")
      a-cylinder(position="1 0.75 1", radius="0.5", height="1.5", color="#{tree2}")
      a-plane(rotation="-90 0 0", width="12", height="12", color="#{ground1}")
      a-camera(position="0 1.75 4")
      a-sky(color="#{sky2}")
    
    span.filter
