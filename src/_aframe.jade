a-scene#scene(stats)
  
  //- INFOS --------------------------------------------------------------------
  
  //- position="x y z"
  
  //- ASSETS ---------------------------------------------------------------

  include _assets.jade
  include _birds.jade
  include _planet.jade
  
  //- LEVEL ----------------------------------------------------------------
  
  a-entity(collada-model="#world_1_fire", scale="1 1 1", position="-1 0 1")
  a-entity(collada-model="#world_1_tree_1", scale="1 1 1", position="2 0 0")
  a-entity(collada-model="#world_1_tree_2", scale="1 1 1", position="4 0 -2")
  a-entity(collada-model="#world_1_tree_3", scale="1 1 1", position="8 0 -4")
  a-entity(collada-model="#world_1_brush_1", scale="1 1 1", position="3 0 0")
  a-entity(collada-model="#world_1_brush_2", scale="1 1 1", position="6 0 -2")
  
  a-entity(collada-model="#world_2_tree_1", scale="1 1 1", position="-2 0 0")
  a-entity(collada-model="#world_2_tree_2", scale="1 1 1", position="-4 0 -2")
  a-entity(collada-model="#world_2_tree_3", scale="1 1 1", position="-8 0 -4")
  a-entity(collada-model="#world_2_brush_1", scale="1 1 1", position="-3 0 0")
  a-entity(collada-model="#world_2_brush_2", scale="1 1 1", position="-6 0 -2")
  
  a-entity(collada-model="#world_3_tree_1", scale="1 1 1", position="10 0 -2")
  a-entity(collada-model="#world_3_tree_2", scale="1 1 1", position="12 0 -4")
  a-entity(collada-model="#world_3_tree_3", scale="1 1 1", position="16 0 -6")
  a-entity(collada-model="#world_3_brush_1", scale="1 1 1", position="11 0 -2")
  a-entity(collada-model="#world_3_brush_2", scale="1 1 1", position="14 0 -4")
  
  a-entity(collada-model="#world_4_tree_1", scale="1 1 1", position="-10 0 -2")
  a-entity(collada-model="#world_4_tree_2", scale="1 1 1", position="-12 0 -4")
  a-entity(collada-model="#world_4_tree_3", scale="1 1 1", position="-16 0 -6")
  a-entity(collada-model="#world_4_brush_1", scale="1 1 1", position="-11 0 -2")
  a-entity(collada-model="#world_4_brush_2", scale="1 1 1", position="-14 0 -4")

  //- MONTAINS
  
  //- due davanti - funzionano entrambe
  a-entity(collada-model="#world_1_montain_1", scale="1 1 1", position="0 0 -50")
  a-entity(collada-model="#world_1_montain_2", scale="1 1 1", position="10 0 -50")
  
  //- due a left - funzionano entrambe
  a-entity(collada-model="#world_2_montain_1", scale="1 1 1", position="-80 0 -150")
  a-entity(collada-model="#world_2_montain_2", scale="1 1 1", position="-40 0 -80")
  
  //- due di dietro - funzionano entrambe
  a-entity(collada-model="#world_3_montain_1", scale="1 1 1", position="30 0 20")
  a-entity(collada-model="#world_3_montain_2", scale="1 1 1", position="0 0 120")
  
  //- due a rigth - funzionano entrambe
  a-entity(collada-model="#world_4_montain_1", scale="1 1 1", position="80 0 -60")
  a-entity(collada-model="#world_4_montain_2", scale="1 1 1", position="60 0 -90")
  
  a-entity(collada-model="#island", scale="1 1 1", position="0 0 0", rotation="0 0 0")

  //- ISLAND: perferct range of scale {12>18-24}
  //- a-entity(collada-model="url(objects/island_v5.dae)", scale="18 18 18", position="0 0 0")
    
  //- SEA
  a-entity(geometry="primitive: circle; radius: 512", material="side: double; color: #4296BA; transparent: true; opacity: 0.5", position="0 -0.1 0", rotation="-90 0 0")

  //- WORLD ----------------------------------------------------------------
  
  //- Lights -----------------------------

  //- luminosità dell’ambiente
  a-light(light="type: ambient; color: #E7E7E7;")
  //- simile al sole
  a-light(light="type: directional; color: #E7E7E7; intensity: 0.5", position="-1 1 0")
  
  //- risolvere il problema delle luce
  
  //- offre di realizzare il gradiente tra i due colori
  //- a-entity(light="type: hemisphere; color: #E7E7E7; groundColor: #E7E7E7; intensity: 0.5")
  //- a-entity(light="type: point; intensity: 0.75; distance: 50; decay: 2", position="0 10 10")
  //- a-entity(light="type: spot; angle: 45")

  //- Sky --------------------------------
  
  a-sky(color="#{sky1}", radius="1000")
  
  //- PLAYER ---------------------------------------------------------------
  
  //- https://github.com/donmccurdy/aframe-extras/tree/master/src/controls#input-devices
  a-entity#player(camera, universal-controls, position="0 1.8 4", rotation="0 0 0")
